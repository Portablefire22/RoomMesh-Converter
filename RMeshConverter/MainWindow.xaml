<Window x:Class="RMeshConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RMeshConverter"
        mc:Ignorable="d"
        Title="RMesh Converter" Height="150" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="75"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0">Input Folder</Label>
        <Button Grid.Column="1" Click="GetFolder">Browse</Button>
        <Label Grid.Row="1" Grid.Column="0">Output Folder</Label>
        <TextBox Grid.Row = "0" Grid.Column="2" Name="FilePickerTextBox">wasd</TextBox>
        <Button Grid.Row="1" Grid.Column="1" Click="SetOutputFolder">Browse</Button>
        <TextBox Grid.Row = "1" Grid.Column="2"  Name="OutputFilePickerTextBox">wasd</TextBox>
        <Label Grid.Row="2" Grid.Column="2" Name="FileCounter">No Files Found</Label>
        <Button Grid.Column="1" Grid.Row="2" Click="Convert">Convert</Button>
    </Grid>
</Window>
